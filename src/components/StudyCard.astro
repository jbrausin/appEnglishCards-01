---
// src/components/StudyCard.astro
export interface Props {
    id: string;
    english: string;
    translation: string;
    learned: boolean;
}

const { id, english, translation, learned } = Astro.props;
---

<div class={`bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden border ${learned ? 'border-purple-300' : 'border-gray-200'}`}>
    <div class="p-4">
        <div class="flex justify-between items-start mb-3">
            <h3 class="text-lg font-bold text-gray-800">{english}</h3>
            <button 
                data-action="toggle-learned"
                data-card-id={id}
                class={learned ? 'text-purple-600' : 'text-gray-400 hover:text-purple-600'}
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill={learned ? 'currentColor' : 'none'} viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </button>
        </div>
        <p class="text-gray-600">{translation}</p>
    </div>
</div>

<style>
    /* Animación suave al pasar el cursor */
    div:hover {
        transform: translateY(-2px);
        transition: transform 0.2s ease-in-out;
    }
    
    /* Transición suave para el botón de marcar */
    button {
        transition: color 0.2s ease-in-out;
    }
</style>